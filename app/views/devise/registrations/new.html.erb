<div class='account-page' id='account-page'>
  <div class='account-page__inner clearfix'> 
    <div class='user-form'>
      <%= form_with model: @user, url: user_registration_path, local: true do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>
          <div class='account-page__header'>
            <h2>ユーザー登録</h2>
          </div>
          <div class='field'>
            <div class="click-name-upload">
              <%= f.label :imageName, "ユーザー画像" %><br />
              <%= f.file_field :imageName, class:"name-image-btn" %>
              <div id="preview-name"></div>
            </div>
          </div>
          <div class='field'>
            <div class='field-label'>
              <%= f.label :name, "アカウント名"%>
            </div>
            <div class='field-input'>
              <%= f.text_field :name, autofocus: true%>
            </div>
          </div>
          <div class='field'>
            <div class='field-label'>
              <%= f.label :email, "メールアドレス"%>
            </div>
            <div class='field-input'>
              <%= f.email_field :email%>
            </div>
          </div>
          <div class='field'>
            <div class='field-label'>
              <%= f.label :password, "パスワード"%>
              <i>(英数字6文字以上)</i>
            </div>
            <div class='field-input'>
              <%= f.password_field :password, autocomplete: "off"%>
            </div>
          </div>
          <div class='field'>
            <div class='field-label'>
              <%= f.label :password_confirmation, "パスワード確認"%>
            </div>
            <div class='field-input'>
              <%= f.password_field :password_confirmation, autocomplete: "off"%>
            </div>
          </div>
          <div class='actions'>
            <%= f.submit "登録", class: 'btn'%>
          </div>
      <% end %>
    </div>
  </div>
</div>
