<div class='account-page' id='account-page'>
  <div class='account-page__inner clearfix'> 
    <div class='user-form'>
      <%= form_with model: @user, url: user_session_path, local: true do |f|%>
          <div class='account-page__header'>
            <h2>ログイン</h2>
          </div>
          <div class='field'>
            <div class='field-label'>
              <%= f.label :emai, "メールアドレス"%>
            </div>
            <div class='field-input'>
              <%= f.email_field :email%>
            </div>
          </div>
          <div class='field'>
            <div class='field-label'>
              <%= f.label :password, "パスワード"%>
              <i>(英数字6文字以上)</i>
            </div>
            <div class='field-input'>
              <%= f.password_field :password, autocomplete: "off"%>
            </div>
          </div>
          <div class='actions'>
            <%= f.submit "ログイン", class: 'btn'%>
          </div>
          <div class='user-authentication-links'>
            <p>ユーザー登録の方は　　　 <%= link_to 'こちら', new_user_registration_path %></p>
            <p>パスワードをお忘れの方は <%= link_to 'こちら',  new_user_password_path %></p>
          </div>
      <% end %>
    </div>
  </div>
</div>
