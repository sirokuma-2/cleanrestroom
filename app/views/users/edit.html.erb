<div class='account-page' id='account-page'>
  <div class='account-page__inner clearfix'> 
    <div class='user-form'>
      <%= form_with model: @user, url: user_path(@user), local: true do |f|%>
          <div class='account-page__header'>
            <h2>プロフィール編集</h2>
          </div>
          <div class='field'>
            <div class="click-name-upload">
              <%= f.label :imageName, "ユーザー画像" %><br />
              <%= f.file_field :imageName, class:"name-image-btn" %>
              <div id="preview-name"></div>
            </div>
          </div>
          <div class='field'>
            <div class='field-label'>
              <%= f.label :name, "アカウント名"%>
            </div>
            <div class='field-input'>
              <%= f.text_field :name,value: @user.name, autofocus: true%>
            </div>
          </div>
          <div class='field'>
            <div class='field-label'>
              <%= f.label :email, "メールアドレス"%>
            </div>
            <div class='field-input'>
              <%= f.email_field :email,value: @user.email %>
            </div>
          </div>   
          <div class='actions'>
            <%= f.submit "編集", class: 'btn'%>
          </div>
      <% end %>
    </div>
  </div>
</div>
